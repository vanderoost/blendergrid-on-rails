<div class="w-full border-t border-gray-200 mt-6 bg-white">
  <div class="mx-auto max-w-7xl pt-16 lg:flex lg:gap-x-16 lg:px-8 ">
    <div class="w-full space-y-16 sm:space-y-20 lg:mx-0 ">
      <div>
        <h1 class="text-xl font-semibold text-gray-900"><%= @project.name %></h1>
        <p class="mt-1 text-sm/6 text-gray-500">Created
          <%= time_ago_in_words(@project.created_at) %>
        </p>

        <% if @project.price_calculated? %>
          <div class="mt-6">
            <h2 class="text-lg font-semibold text-gray-900">Sample Frames</h2>
            <div class="flex">
              <% @sample_frame_urls.each do |url| %>
                <div class="shrink">
                  <%= image_tag url, class: "" %>
                </div>
              <% end %>
            </div>
          </div>
        <% else %>

        <dl class="mt-6 divide-y divide-gray-100 border-t border-gray-200 text-sm/6">
          <% for attachment in @project.project_source.attachments %>
            <div class="py-6 sm:flex">
              <dt class="font-medium text-gray-900 sm:w-2/3 sm:flex-none sm:pr-6"><%= middle_truncate(attachment.blob.filename, 96) %></dt>
              <dd class="mt-1 flex justify-between gap-x-6 sm:mt-0 sm:flex-auto">
                <div class="text-gray-900"><%= number_to_human_size(attachment.blob.byte_size) %></div>
                <button
                  type="button"
                  class="
                    font-semibold text-blue-600 hover:text-indigo-500 flex items-center
                  "
                >
                  <%= icon "trash", class: "h-4 w-4 mr-2" %>
                  Delete
                </button>
              </dd>
            </div>
          <% end %>
        </dl>
      </div>

      <div class="border-t border-gray-200 py-6">
        <h2 class="text-base/7 font-semibold text-gray-900">Settings</h2>
        <p class="mt-1 text-sm/6 text-gray-500">Change your project settings</p>

        <%= form_with(model: @project, class: "mt-6 space-y-6") do |f| %>
          <div class="grid grid-cols-1 gap-x-16 gap-y-6 sm:grid-cols-2">
            <div>
              <h3 class="text-sm font-medium text-gray-900">Resolution</h3>
              <div class="mt-2 grid grid-cols-2 gap-4">
                <div>
                  <%= f.label :resolution_x,
                          "Width",
                          class: "block text-sm/6 font-medium text-gray-900" %>
                  <div class="mt-2">
                    <%= f.number_field :resolution_x,
                                   value: @project.settings.dig("output", "format", "resolution_x"),
                                   class:
                                     "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 sm:text-sm/6" %>
                  </div>
                </div>
                <div>
                  <%= f.label :resolution_y,
                          "Height",
                          class: "block text-sm/6 font-medium text-gray-900" %>
                  <div class="mt-2">
                    <%= f.number_field :resolution_y,
                                   value: @project.settings.dig("output", "format", "resolution_y"),
                                   class:
                                     "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 sm:text-sm/6" %>
                  </div>
                </div>
              </div>
            </div>

            <div>
              <h3 class="text-sm font-medium text-gray-900">Frame Range</h3>
              <div class="mt-2 grid grid-cols-2 gap-4">
                <div>
                  <%= f.label :frame_start,
                          "Start Frame",
                          class: "block text-sm/6 font-medium text-gray-900" %>
                  <div class="mt-2">
                    <%= f.number_field :frame_start,
                                   value: @project.settings.dig("output", "frame_range", "start"),
                                   class:
                                     "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 sm:text-sm/6" %>
                  </div>
                </div>
                <div>
                  <%= f.label :frame_end,
                          "End Frame",
                          class: "block text-sm/6 font-medium text-gray-900" %>
                  <div class="mt-2">
                    <%= f.number_field :frame_end,
                                   value: @project.settings.dig("output", "frame_range", "end"),
                                   class:
                                     "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 sm:text-sm/6" %>
                  </div>
                </div>
              </div>
            </div>

            <div>
              <h3 class="text-sm font-medium text-gray-900">Cycles Settings</h3>
              <div class="mt-2 grid grid-cols-2 gap-4">
                <div>
                  <%= f.label :max_samples,
                          "Max Samples",
                          class: "block text-sm/6 font-medium text-gray-900" %>
                  <div class="mt-2">
                    <%= f.number_field :max_samples,
                                   value:
                                     @project.settings.dig("render", "sampling", "max_samples"),
                                   class:
                                     "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 sm:text-sm/6" %>
                  </div>
                </div>
                <div>
                  <%= f.label :noise_threshold,
                          "Noise Threshold",
                          class: "block text-sm/6 font-medium text-gray-900" %>
                  <div class="mt-2">
                    <%= f.number_field :noise_threshold,
                                   value:
                                     @project.settings.dig("render", "sampling", "noise_threshold"),
                                   step: "0.01",
                                   class:
                                     "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-600 sm:text-sm/6" %>
                  </div>
                </div>
              </div>
            </div>
          </div>

        <% end %>
          <div class="flex justify-end gap-x-3">
            <%= link_to "Back",
            projects_path,
            class:
              "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
            <%= f.submit "Save Changes",
                     class:
                       "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
