<h1>Email Address Verification</h1>

<p>You need to verify your email address (<%= @email_address %>) before you can log in.</p>

<%= form_with url: email_address_verifications_path do |form| %>
  <fieldset>
    <div>
      <%= form.email_field :email_address, value: @email_address, enabled: false %>
    </div>
    <br>
    <div><%= form.submit "Send a new verification email" %></div>
  </fieldset>
<% end %>
