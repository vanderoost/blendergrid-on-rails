<%= javascript_include_tag "activestorage" %>

<h1>New Upload</h1>

<%= form_with model: @upload do |form| %>
  <%= form.hidden_field :uuid, value: @upload.uuid %>
  <%= form.file_field :source_file,
                  direct_upload: true,
                  data: {
                    direct_upload_url:
                      rails_direct_uploads_url(upload_uuid: @upload.uuid),
                  } %>
  <%= form.submit %>
<% end %>
