<!-- Navigate back -->
<div class="flex justify-between mt-8 gap-4">
  <%= link_to @return_path, class: "basis-0 grow flex items-center text-2xl text-gray-600 dark:text-gray-400 hover:text-gray-900 hover:dark:text-white" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 mr-2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
    </svg>
    Projects
  <% end %>
  <h1 class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @project.name %></h1>
  <span class="basis-0 grow"></span>
</div>


<!-- Main -->
<% if @project.checked? %>
  <%= render "settings_form" %>
<% else %>
  TODO: Project details for <%= @project.name %>. 
<% end %>


