<%= form_with model: signup, class: "space-y-6" do |form| %>
  <div>
    <%= form.label :name, class: "block text-sm/6 font-medium text-gray-900 dark:text-gray-100" %>
    <div class="mt-2">
      <%= form.text_field :name,
         required: true,
         autofocus: true,
         autocomplete: "first_name",
         value: params[:name], class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-primary-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-primary-500" %>
    </div>
  </div>

  <div>
    <%= form.label :email_address, class: "block text-sm/6 font-medium text-gray-900 dark:text-gray-100" %>
    <div class="mt-2">
      <%= form.email_field :email_address,
                       required: true,
                       autocomplete: "email",
                       value: params[:email_address], class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-primary-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-primary-500" %>
    </div>
  </div>

  <div>
    <div class="flex items-center justify-between">
      <%= form.label :password, class: "block text-sm/6 font-medium text-gray-900 dark:text-gray-100" %>
    </div>
    <div class="mt-2">
      <%= form.password_field :password, required: true, autocomplete: "current-password", class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-primary-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-primary-500"  %>
    </div>
  </div>

  <div>
    <div class="flex items-center justify-between">
      <%= form.label :password_confirmation, "Confirm password", class: "block text-sm/6 font-medium text-gray-900 dark:text-gray-100" %>
    </div>
    <div class="mt-2">
      <%= form.password_field :password, required: true, autocomplete: "current-password", class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-primary-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-primary-500"  %>
    </div>
  </div>

  <%= form.hidden_field :gift, value: true if local_assigns[:gift] %>

  <%= render "shared/form_errors", form: form %>

  <div>
    <%= form.submit "Sign up", class: "flex w-full justify-center rounded-md bg-primary-600 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-xs hover:bg-primary-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600 dark:bg-primary-500 dark:shadow-none dark:hover:bg-primary-400 dark:focus-visible:outline-primary-500" %>
  </div>
<% end %>
