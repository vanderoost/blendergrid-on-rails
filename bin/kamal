#!/usr/bin/env ruby
# frozen_string_literal: true

#
# This file was generated by Bundler.
#
# The application 'kamal' is installed as part of a gem, and
# this file is here to facilitate running it.
#

require "fileutils"

APP_ROOT = File.expand_path("..", __dir__)
ENV["BUNDLE_GEMFILE"] ||= File.expand_path("../Gemfile", __dir__)

def system!(*args)
  system(*args, exception: true)
end

bundle_binstub = File.expand_path("bundle", __dir__)

if File.file?(bundle_binstub)
  if File.read(bundle_binstub, 300).include?("This file was generated by Bundler")
    load(bundle_binstub)
  else
    abort("Your `bin/bundle` was not generated by Bundler, so this binstub cannot run.
Replace `bin/bundle` by running `bundle binstubs bundler --force`, then run this command again.")
  end
end

FileUtils.chdir "#{APP_ROOT}/terraform" do
  system! "terraform init"
  system! "terraform apply -auto-approve"
end

require "rubygems"
require "bundler/setup"

docker_is_running = system "docker ps", :err => File::NULL

unless docker_is_running
  puts "== Starting Docker Desktop =="
  system! "docker desktop start"
end

begin
  load Gem.bin_path("kamal", "kamal")
ensure
  unless docker_is_running
    puts "\n== Stopping Docker Desktop =="
    system "docker desktop stop"
  end
end
