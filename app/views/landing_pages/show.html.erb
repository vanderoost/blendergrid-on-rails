<% if Date.new(2025, 11, 20) > Date.today %>
  <div id="old-blendergrid-banner" class="z-50 pointer-events-none fixed inset-x-0 bottom-0 sm:flex sm:justify-center sm:px-6 sm:pb-5 lg:px-8">
    <div class="pointer-events-auto flex items-center justify-between gap-x-6 bg-purple-700 px-6 py-2.5 sm:rounded-xl sm:py-3 sm:pr-3.5 sm:pl-4 dark:bg-purple-800 dark:inset-ring dark:inset-ring-white/10 z-50 backdrop-blur-md">
      <p class="text-sm/6 text-white">
        <a href="https://old.blendergrid.com" target="_blank">
          <strong class="font-semibold">Welcome to the new Blendergrid</strong><svg viewBox="0 0 2 2" aria-hidden="true" class="mx-2 inline size-0.5 fill-current"><circle r="1" cx="1" cy="1" /></svg>You can still access the old site at <u>old.blendergrid.com</u> until the end of Nov.
        </a>
      </p>
      <button type="button" class="-m-1.5 flex-none p-1.5 opacity-70 hover:opacity-100 cursor-pointer" onclick="document.getElementById('old-blendergrid-banner').hidden = true;">
        <span class="sr-only">Dismiss</span>
        <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="size-5 text-white">
          <path d="M6.28 5.22a.75.75 0 0 0-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 1 0 1.06 1.06L10 11.06l3.72 3.72a.75.75 0 1 0 1.06-1.06L11.06 10l3.72-3.72a.75.75 0 0 0-1.06-1.06L10 8.94 6.28 5.22Z" />
        </svg>
      </button>
    </div>
  </div>
<% end %>

<% if @landing_page&.sections&.any? %>
  <% @landing_page.sections.each do |section| %>
    <%= render "landing_pages/section", section: section %>
  <% end %>
<% else %>
  <%= render "landing_pages/section", section: {
    "id" => "heading",
    "title" => "Fast rendering for Blender",
    "subtitle" => "Start by uploading a .blend file."
  } %>
  <%= render "landing_pages/section", section: {"id" => "upload"} %>
<% end %>
